
import java.util.Scanner;

public class Persona {
    private final String nombre;
    private int edad;
    private char sexo;
    private double peso;
    private double altura;
    private final String DNI;

    public static final char SEXO_HOMBRE = 'H';
    public static final char SEXO_MUJER = 'M';

    private final int PESO_IDEAL_BAJO = -1;
    private final int PESO_IDEAL_NORMAL = 0;
    private final int PESO_IDEAL_ALTO = 1;

    public Persona() {
        this.nombre = "";
        this.edad = 0;
        this.sexo = SEXO_HOMBRE;
        this.peso = 0;
        this.altura = 0;
        this.DNI = generaDNI();
    }

    public Persona(String nombre, int edad, char sexo) {
        this.nombre = nombre;
        this.edad = edad;
        this.sexo = comprobarSexo(sexo);
        this.peso = 0;
        this.altura = 0;
        this.DNI = generaDNI();
    }

    public Persona(String nombre, int edad, char sexo, double peso, double altura) {
        this.nombre = nombre;
        this.edad = edad;
        this.sexo = comprobarSexo(sexo);
        this.peso = peso;
        this.altura = altura;
        this.DNI = generaDNI();
    }

    public int calcularIMC() {
        double imc = peso / (altura * altura);
        if (imc < 20) {
            return PESO_IDEAL_BAJO;
        } else if (imc >= 20 && imc <= 25) {
            return PESO_IDEAL_NORMAL;
        } else {
            return PESO_IDEAL_ALTO;
        }
    }

    public boolean esMayorDeEdad() {
        return edad >= 18;
    }

    private char comprobarSexo(char sexo) {
        return sexo == SEXO_HOMBRE || sexo == SEXO_MUJER ? sexo : SEXO_HOMBRE;
    }

    private String generaDNI() {
        final int DIVISOR_DNI = 23;
        int numDNI = (int) (Math.random() * 100000000) + 10000000;
        int resto = numDNI % DIVISOR_DNI;
        String letraDNI = obtenerLetraDNI(resto);
        return Integer.toString(numDNI) + letraDNI;
    }

    private String obtenerLetraDNI(int resto) {
        final String LETRAS_DNI = "TRWAGMYFPDXBNJZSQVHLCKE";
        return LETRAS_DNI.charAt(resto) + "";
    }

    @Override
    public String toString() {
        String sexoStr = sexo == SEXO_HOMBRE ? "Hombre" : "Mujer";
        return "Nombre: " + nombre + "\n" +
                "Edad: " + edad + " a√±os\n" +
                "DNI: " + DNI + "\n" +
                "Sexo: " + sexoStr + "\n" +
                "Peso: " + peso + " kg\n" +
                "Altura: " + altura + " m";
    }

    public void setEdad(int edad) {
        this.edad = edad;
    }

